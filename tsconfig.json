{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noErrorTruncation": true,
    "declaration": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node",
      "vue"
    ],
    "baseUrl": ".",
    "paths": {
      "vue-threejs/*": ["./src/*"],
    },
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
